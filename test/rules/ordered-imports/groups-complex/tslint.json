{
    "rules": {
        "ordered-imports": [
            true,
            {
                "import-sources-order": "case-insensitive",
                "named-imports-order": "case-insensitive",
                "grouped-imports": true,
                "groups": [
                    { "match": "^app", "order": 20 },
                    { "match": "^@pkg", "order": 30 },
                    { "name": "parent_dir", "match": "^\\.\\.", "order": 50 },
                    { "name": "current dir", "match": "^\\.", "order": 40 },
                    { "name": "extra", "match": ".*", "order": 5 }
                ]
            }
        ]
    }
}
