{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictPropertyInitialization": true,
        "sourceMap": true,
        "target": "es5",
        "lib": ["es6"],
        "outDir": "../build"
    },
    "include": ["../src/**/*", "**/*"],
    "exclude": ["./files", "./rules"]
}
