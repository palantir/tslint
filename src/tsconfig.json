{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "importHelpers": true,
        "declaration": true,
        "sourceMap": false,
        "target": "es5",
        "lib": ["es6"],
        "outDir": "../lib",
        "types": [
           "node"
        ]
    }
}
