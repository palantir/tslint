{
  "lintOptions": {
    "typeCheck": true
  },
  "extends": "tslint:all",
  "rules": {
    "align": [true,
        "parameters",
        "statements"
    ],
    "arrow-return-shorthand": true, // TODO: "multiline"
    "comment-format": [true,
        "check-space"
        // TODO: "check-uppercase"
    ],
    "completed-docs": false, // TODO
    "cyclomatic-complexity": false,
    "interface-name": false,
    "file-header": [true,
      "Copyright \\d{4} Palantir Technologies, Inc."
    ],
    "max-classes-per-file": false,
    "max-line-length": [true, 140],
    "member-access": true, // But do not check accessor/constructor
    "member-ordering": [true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "newline-before-return": false,
    "no-any": false,
    "no-inferrable-types": false, // TODO
    "no-magic-numbers": false, // TODO
    "no-non-null-assertion": false,
    "no-null-keyword": false, // TODO
    "no-parameter-properties": false,
    "no-require-imports": false,
    "no-unbound-method": false, // TODO
    "no-unnecessary-callback-wrapper": false, // TODO
    "no-unnecessary-qualifier": false, // TODO
    "no-unsafe-any": false, // TODO
    "no-use-before-declare": false,
    "no-void-expression": false,
    "only-arrow-functions": [true, "allow-declarations", "allow-named-functions"],
    "prefer-function-over-method": false, // TODO
    "restrict-plus-operands": false,
    "strict-boolean-expressions": false, // TODO
    "switch-default": false,
    "strict-type-predicates": false, // TODO
    "triple-equals": [true, "allow-null-check"],
    "typedef": false,
    "variable-name": [true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ]
  }
}
